<table border="1">
  <thead>
    <tr>
      <th>Timespent</th>
      <th>Status</th>
      <th>Project</th>
      <th colspan="3"> Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @executions.each do |execution| %>
      <tr>
        <td><%=execution.status.eql?("Pending") ? "Processando" : Time.at(execution.timespent).utc.strftime("%H:%M:%S") %></td>
        <td><%= execution.status %></td>
        <td><%= execution.project.name %></td>
        <td><%= link_to 'Show', project_execution_path(execution.project, execution) %></td>
        <td><%= link_to 'Edit', edit_project_execution_path(execution.project, execution) %></td>
        <td><%= link_to 'Destroy', project_execution_path(execution.project, execution), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>