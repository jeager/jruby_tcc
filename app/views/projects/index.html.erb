<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <h1>Listando Projetos</h1>

    <table class="table" border="1">
      <thead>
        <tr>
          <th>Nome</th>
          <th class="col-md-5">Description</th>
          <th class="col-md-4">Opções</th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>
            <td><%= project.description %></td>
            <td><%= button_to 'Show', project, :method => :get, class: "btn btn-default"%>  
            <%= button_to 'Edit', edit_project_path(project), :method => :get, class: "btn btn-warning" %> 
            <%= button_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @projects, class: "flickr_pagination" %>
    <br>
    <div class="col-md-offset-5">
    <%= button_to 'Novo Projeto', new_project_path, :method => :get, class: "btn btn-primary" %>
    </div>
  </div>
</div>